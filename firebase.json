{
  "hosting": {
    "public": "dist/portfolio/browser",
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|svg|gif|woff2|webp)",
        "headers": [
          { "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
